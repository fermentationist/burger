<div class="container">
	<div class="row">

		<div class="col">
			<div class="card" style="width: 33%;">
			  <div class="card-body">
			    <h4 class="card-title">Card title</h4>
			    <h6 class="card-subtitle mb-2 text-muted">(click to mark as devoured)</h6>
			   	{{#each burgers}}
			    	{{#unless devoured}}
			    		{{> burgers/burger-block}}
			    	{{/unless}}
				{{/each}}
			  </div>
			</div>  
		</div>

		<div class="col">
			<div class="card" style="width: 33%;">
			  <div class="card-body">
			    <h4 class="card-title">Invent-a-Burger</h4>
				<form>
					<div class="form-group">
						<label for="burger_name">Burger Name</label>
						<input type="text" size="30" class="form-control" id="burger_name" placeholder="Enter burger name">
				{{!-- 		<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> --}}
					</div>
					{{!-- <div class="form-group">
						<label for="exampleInputPassword1">Password</label>
						<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
					</div> --}}
					<div class="form-check">
						<label class="form-check-label">
						<input type="checkbox" class="form-check-input">
						Already devoured
						</label>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			  </div>
			</div>

		<div class="col">
			<div class="card" style="width: 33%;">
				<div class="card-body">
					<h4 class="card-title">Despoiled Burgheurs</h4>
					<h6 class="card-subtitle mb-2 text-muted">(click to delete)</h6>
					{{#each burgers}}
						{{#if devoured}}
							{{> burgers/burger-block}}
						{{/if}}
					{{/each}}
				</div>
			</div>

		</div>

	</div>
</div>














